<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="newer-posts btn btn-info" href="{{page_url prev}}">&larr; Anterior</a>
    {{/if}}
    <span style="margin: 0 1em;" class="page-number">Pagina {{page}} de {{pages}}</span>
    {{#if next}}
        <a class="older-posts btn btn-info" href="{{page_url next}}"> Siguiente &rarr;</a>
    {{/if}}
</nav>
